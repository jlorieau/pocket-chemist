QListView {
    selection-background-color: #0000aa;
}

QListView::item {
    padding: 0.5em;
}

/* Panel heading customizations */
BasePanel > QLabel {
    color: #dddddd;
    padding: 4px;
}

/* Tree view item hover property */
BasePanel > QTreeView::item:hover {
    background: #333333;
}

/* Panel and sub-widget customizations */
BasePanel > * {
    background-color: #222222;
}